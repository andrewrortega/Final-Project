<div class="page-header">
  <h1>
Dog Walkers
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Profile Pic</th>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Experience (Years)</th>
        <!-- <th>Bio</th> -->
        <th>Location</th>
        <!-- <th>Contact</th> -->
        <th>Options</th>

      </tr>

      <% @walkers.each do |walker| %>

      <tr>
        <td><img src="<%= walker.avatar %>" length=200 width =140></td>
        <td><%= walker.first_name %></td>
        <td><%= walker.last_name %></td>
        <td><%= walker.years_of_experience %></td>
        <!-- <td><%= walker.bio %></td> -->
        <td><%= walker.location %></td>
        <!-- <td><%= walker.contact %></td> -->
        <td>
          <a href="/walkers/<%= walker.id %>" class="btn btn-primary">Show Bio and Contact Details</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
