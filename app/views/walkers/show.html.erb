      <dd><%= @walker.first_name %></dd>

      <dt>Last Name</dt>
      <dd><%= @walker.last_name %></dd>

      <dt>Years Of Experience</dt>
      <dd><%= @walker.years_of_experience%></dd>

      <dt>Bio</dt>
      <dd><%= @walker.bio %></dd>

      <dt>Location</dt>
      <dd><%= @walker.location %></dd>

      <dt>Contact</dt>
      <dd><%= @walker.contact %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/walkers" class="btn btn-primary">
        Back
      </a>
    </div>
  </div>
</div>

<% end %>
